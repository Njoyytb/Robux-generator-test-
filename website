    }

    /* Animation des monnaies (image) */
    .coin-img {
      position: fixed;
      top: -60px;
      width: 40px;
      animation: fall 3s linear forwards;
      z-index: 1;
      opacity: 0.9;
    }

    @keyframes fall {
      to {
        transform: translateY(110vh);
        opacity: 0;
      }
    }

    /* Message d√©filant */
    .floating-message {
      margin-top: 15px;
      font-size: 1em;
      color: #00ffbb;
      font-weight: bold;
      animation: fadeInOut 4s ease-in-out infinite;
    }

    @keyframes fadeInOut {
      0%, 100% { opacity: 0; }
      20%, 80% { opacity: 1; }
    }
