  <style>
    body {
      background: linear-gradient(145deg, #1d1f2f, #12131c);
      font-family: 'Segoe UI', sans-serif;
      color: white;
      padding: 40px;
      text-align: center;
      overflow-x: hidden;
    }

    .container {
      background: #2b2d42;
      padding: 30px;
      border-radius: 20px;
      max-width: 450px;
      margin: auto;
