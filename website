      z-index: 2;
    }

    h1 {
      font-size: 2.3em;
      margin-bottom: 20px;
    }

    select, input, button {
      padding: 10px;
      font-size: 1em;
      margin: 10px;
      border-radius: 10px;
      border: none;
      width: 80%;
    }

    button {
      background-color: #00ffbb;
      color: black;
      cursor: pointer;
      width: 85%;
    }

    .loader {
      margin-top: 20px;
      font-size: 1.1em;
    }

    .hidden {
